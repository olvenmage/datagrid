<script>
    var DataTables = (DataTables === undefined) ? {} : DataTables;

    DataTables['<?=$this->getId()?>'] = $('#<?=$this->getId()?>').DataTable({
        stateSave: true,
        columns: [
            <?php foreach ($this->getColumns() as $key => $column): ?>
